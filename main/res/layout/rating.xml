<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dip"
    android:background="#09091a">

    <TextView android:text="Valuta la corsa" android:id="@+id/rank_dialog_text1"
        android:textSize="12dp" android:layout_marginTop="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFDB1B"/>

    <RatingBar
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/dialog_ratingbar" android:layout_gravity="center"
        android:numStars="5" android:stepSize="1.0" android:rating="2"
        android:isIndicator="false"
        android:background="#070721"
        android:progressBackgroundTint="#fff"
        android:progressTint="#FFDB1B"/>

    <Button
        android:id="@+id/rank_dialog_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:elevation="0dp"
        android:focusable="false"
        android:background="#070721"
        android:text="Vota"
        android:textColor="#FFDB1B"
        android:textSize="12dip"
        android:textColorHint="#FFDB1B"
    />

</LinearLayout>